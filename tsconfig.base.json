{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-ratenow/core/feature-breadcrumb": [
        "libs/core/feature-breadcrumb/src/index.ts"
      ],
      "@nx-ratenow/core/feature-toolbar": [
        "libs/core/feature-toolbar/src/index.ts"
      ],
      "@nx-ratenow/core/material": ["libs/core/material/src/index.ts"],
      "@nx-ratenow/shared/auth": ["libs/shared/auth/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
