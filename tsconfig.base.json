{
  "compileOnSave": false,
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-ratenow/core/feature-toolbar": [
        "libs/core/feature-toolbar/src/index.ts"
      ],
      "@nx-ratenow/core/material": ["libs/core/material/src/index.ts"],
      "@nx-ratenow/core/stylesheets": ["libs/core/stylesheets/src/index.ts"],
      "@nx-ratenow/shared/auth": ["libs/shared/auth/src/index.ts"],
      "@nx-ratenow/shared/feature-table": [
        "libs/shared/feature-table/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "exclude": ["node_modules", "tmp"]
}
